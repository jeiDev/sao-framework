{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "module": "commonjs", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@providers": ["providers"],
      "@providers/*": ["providers/*"],
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@routers": ["routers"],
      "@routers/*": ["routers/*"],
      "@core": ["core"],
      "@core/*": ["core/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@libs": ["libs"],
      "@libs/*": ["libs/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
    }
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modules", "build", "test"
  ],
  "include": [
    "src", "global.d.ts", "*.yaml"
  ]
}